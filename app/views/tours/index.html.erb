<div class="form-title row">
  <h1>All tours:</h1>
</div>

<hgroup class="row text-center">
  <div class="row">
    <div class="large-2 columns text-left"><h3 class="red"><%=h "<Name>" %></h3></div>
    <div class="large-2 columns text-left"><h3 class="red"><%=h "<Organizer>" %></h3></div>
    <div class="large-2 columns"><h3 class="red"><%=h "<City>" %></h3></div>
    <div class="large-2 columns"><h3 class="red"><%=h "<Time>" %></h3></div>
    <div class="large-3 columns text-left end"><h3 class="red"><%=h "<Description>" %></h3></div>
  </div>
</hgroup>

<ol class="row text-center content">
  <% @tours.each do |tour| %>
    <li class="row" data-equalizer>
      <div class="large-2 columns text-left" data-equalizer-watch>
        <h5><%= tour.name %></h5>
      </div>
      <div class="large-2 columns text-left" data-equalizer-watch>
        <h5><%= avatar_and_name_tag tour.organizer, "medium" %></h5>
      </div>
      <div class="large-2 columns" data-equalizer-watch>
        <h5><%= tour.city.name %></h5>
      </div>
      <div class="large-2 columns" data-equalizer-watch>
        <h5><%= tour.starting_at.strftime("%m/%d/%y @ %H:%M") %></h5>
      </div>
      <div class="large-2 columns" data-equalizer-watch>
        <h5><%= tour.description %></h5>
      </div>
      <div class="large-1 columns text-left" data-equalizer-watch>
        <h5>
          <%= link_to tour, class: 'borderless-button' do %>
            <%= fa_icon :eye %>
          <% end %>
          <% if @current_user === tour.organizer %>
            <%= link_to edit_venue_path(tour), class: 'borderless-button' do %>
              <%= fa_icon :pencil %>
            <% end %>
          <% end %>
        </h5>  
      </div>      
    </li>
  <% end %>
</ol>

<div class="row">
  <div class="large-10 large-centered columns text-center">
    <%= paginate @tours %>
  </div>
</div>