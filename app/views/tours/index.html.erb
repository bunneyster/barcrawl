<div class="form-title row">
  <h1>All tours:</h1>
</div>

<hgroup class="row text-center">
  <h2 class="red large-3 columns"><%=h "<Name>" %></h2>
  <h2 class="red large-3 columns"><%=h "<Latitude>" %></h2>
  <h2 class="red large-3 columns end"><%=h "<Longitude>" %></h2>
</hgroup>

<h1>Listing tours</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Organizer</th>
      <th>Day and Starting time</th>
      <th>Image</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tours.each do |tour| %>
      <tr>
        <td><%= tour.name %></td>
        <td><%= tour.organizer.name %></td>
        <td><%= tour.starting_at %></td>
        <td><%= tour.image %></td>
        <td><%= tour.description %></td>
        <td><%= link_to 'Show', tour %></td>
        <td><%= link_to 'Edit', edit_tour_path(tour) %></td>
        <td><%= link_to 'Destroy', tour, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

