<% if @current_user.invited_to?(@tour) %>
  <%= form_for @tour.invitation_for(@current_user) do |f| %>
    <%= f.hidden_field :status, value: new_invitation_status(@current_user, @tour) %>
    <%= f.button type: :submit, class: 'borderless-button' do %>
      <%= fa_icon rsvp_button_icon(@current_user, @tour) %>
    <% end %>
  <% end %>
<% end %>