<%= hidden_div_if(!@tour.organized_by?(@current_user) || @tour.status === "finalized") do %>
  <%= form_for @tour do |f| %>
    <%= f.hidden_field :status, value: 'finalized' %>
    <%= f.submit "Finalize itinerary" %>
  <% end %>
<% end %>
<%= hidden_div_if(!@tour.organized_by?(@current_user) || @tour.status === "pending") do %>
  <%= form_for @tour do |f| %>
    <%= f.hidden_field :status, value: 'pending' %>
    <%= f.submit "Revise itinerary" %>
  <% end %>
<% end %>