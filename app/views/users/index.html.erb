<h1>Listing users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Avatar</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= image_tag avatar_url(user), size:"48" %></td>
        <td><%= link_to 'Add friend', friendships_path(friend_id: user.to_param), method: :post %></td>
      </tr>
    <% end %>
  </tbody>
</table>

