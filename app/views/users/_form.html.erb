<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, 'Username:' %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email, 'E-mail:' %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :avatar_url, '(Optional) Avatar URL:' %><br>
    <%= f.text_field :avatar_url %>
  </div>
  <div class="field">
    <%= f.label :password, 'Password:' %><br>
    <%= f.password_field :password %>
  </div>
  <div>
    <%= f.label :password_confirmation, 'Re-enter your password:' %><br>
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
